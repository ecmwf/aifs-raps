set -u

rundirs=$@
if [[ $rundirs == "" ]]; then
	echo "error. usage: 'test-correctness <list of rundirs>'"
	exit 0
fi

python $RAPS_AIFS_ROOT_DIR/etc/aifs/test-correctness.py $rundirs
